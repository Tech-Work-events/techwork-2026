---
import Layout from '../layouts/Layout.astro'
import { CFP_DATA, SERVICES_DATA, EVENT_DATA } from '../config'
import CTASection from '../components/cta/CTASection.astro'

const cfp = CFP_DATA
---

<Layout title="CFP - Call for Papers" description={`Proposez votre talk pour ${EVENT_DATA.event.name}`}>
    <!-- Header Section -->
    <section class="pt-24 sm:pt-28 lg:pt-32 pb-12 sm:pb-16 lg:pb-20 bg-gradient-to-br from-gray-50 to-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center scroll-animate">
                <div
                    class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-6">
                    <span class="mr-2 animate-bounce-gentle">üì¢</span>
                    Call for Papers
                </div>
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-6">
                    Partagez votre <span class="text-gradient">expertise</span> (et votre amour du lama)
                </h1>
                <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
                    Vous avez une passion, une exp√©rience, un projet fou √† partager ? Rejoignez-nous sur sc√®ne : on
                    fournit les lamas gonflables, vous apportez la magie.
                </p>

                <div class="mt-8 p-6 bg-white rounded-xl shadow-lg border border-gray-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Statut du CFP</h2>
                            <p class="text-gray-600 mt-1">
                                {cfp.cfp.isOpen ? 'Ouvert' : 'Ferm√©'} ‚Ä¢ Deadline: {cfp.cfp.deadline}
                            </p>
                        </div>
                        <div
                            class={`px-4 py-2 rounded-full text-sm font-semibold ${
                                cfp.cfp.isOpen ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'
                            }`}>
                            {cfp.cfp.isOpen ? '‚úÖ Ouvert' : '‚ùå Ferm√©'}
                        </div>
                    </div>
                </div>
                <div class="mt-6 space-y-4">
                    <ul class="text-left mx-auto max-w-2xl text-gray-700 text-sm grid gap-2">
                        <li>‚Ä¢ Audience dev qualifi√©e</li>
                        <li>‚Ä¢ Formats courts et denses</li>
                        <li>‚Ä¢ Ambiance bienveillante (lama friendly)</li>
                    </ul>

                    {
                        cfp.cfp.isOpen ? (
                            <a
                                href={SERVICES_DATA.cfp.publicUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="btn btn-secondary text-lg px-8 py-4 hover-lift group inline-flex items-center"
                                aria-label="Soumettre une proposition au CFP"
                                data-cta
                                data-placement="cfp-header">
                                <span class="mr-2 group-hover:animate-bounce-gentle" aria-hidden="true">
                                    üöÄ
                                </span>
                                Soumettre ma proposition
                            </a>
                        ) : (
                            <a
                                href={`mailto:${cfp.contact.email}`}
                                class="btn btn-secondary hover-lift group inline-flex items-center"
                                aria-label="Nous contacter (CFP ferm√©)"
                                data-cta
                                data-placement="cfp-header-closed">
                                <span class="mr-2" aria-hidden="true">
                                    üìß
                                </span>
                                Nous contacter
                            </a>
                        )
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Formats des talks -->
    <section class="py-12 sm:py-16 lg:py-20 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6">
                    Formats <span class="text-gradient">disponibles</span>
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Choisissez le format qui correspond le mieux √† votre sujet
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
                {
                    cfp.formats.map((format, index) => (
                        <div class="card hover-lift scroll-animate-scale" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="text-center">
                                <div class="text-4xl mb-4">{format.icon}</div>
                                <h3 class="text-xl font-bold text-gray-900 mb-2">{format.name}</h3>
                                <p class="text-3xl font-black text-primary-600 mb-2">{format.duration}</p>
                                <p class="text-gray-600 text-sm mb-4">{format.description}</p>
                                <div class="text-xs text-gray-500">{format.slots} cr√©neaux disponibles</div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Th√©matiques -->
    <section class="py-12 sm:py-16 lg:py-20 bg-gradient-to-br from-gray-50 to-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6">
                    Th√©matiques <span class="text-gradient">recherch√©es</span>
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Nous recherchons des talks sur ces sujets, mais n'h√©sitez pas √† proposer autre chose !
                </p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 stagger-children">
                {
                    cfp.topics.map((topic, index) => (
                        <div class="card hover-lift scroll-animate-scale" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="text-center">
                                <div class="text-4xl mb-4">{topic.icon}</div>
                                <h3 class="text-lg font-bold text-gray-900 mb-2">{topic.name}</h3>
                                <p class="text-sm text-gray-600">{topic.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Conseils -->
    <section class="py-12 sm:py-16 lg:py-20 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6">
                    {cfp.tips.title}
                </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 stagger-children">
                {
                    cfp.tips.items.map((tip, index) => (
                        <div class="card hover-lift scroll-animate-scale" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="text-center">
                                <div class="text-4xl mb-4">{tip.icon}</div>
                                <h3 class="text-lg font-bold text-gray-900 mb-2">{tip.title}</h3>
                                <p class="text-sm text-gray-600">{tip.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Processus -->
    <section class="py-12 sm:py-16 lg:py-20 bg-gradient-to-br from-primary-50 to-secondary-50">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6">
                    {cfp.process.title}
                </h2>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
                {
                    cfp.process.steps.map((step, index) => (
                        <div class="text-center scroll-animate-scale" style={`animation-delay: ${index * 0.2}s`}>
                            <div class="bg-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 shadow-lg">
                                <div class="text-2xl">{step.icon}</div>
                            </div>
                            <div class="bg-white rounded-lg p-6 shadow-lg hover-lift">
                                <div class="text-sm font-semibold text-primary-600 mb-2">√âtape {step.step}</div>
                                <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>
                                <p class="text-sm text-gray-600">{step.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Avantages -->
    <section class="py-12 sm:py-16 lg:py-20 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 scroll-animate">
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-6">
                    {cfp.benefits.title}
                </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 stagger-children">
                {
                    cfp.benefits.items.map((benefit, index) => (
                        <div class="card hover-lift scroll-animate-scale" style={`animation-delay: ${index * 0.1}s`}>
                            <div class="text-center">
                                <div class="text-4xl mb-4">{benefit.icon}</div>
                                <h3 class="text-lg font-bold text-gray-900 mb-2">{benefit.title}</h3>
                                <p class="text-sm text-gray-600">{benefit.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-12 sm:py-16 lg:py-20 bg-gradient-to-r from-primary-600 to-secondary-600">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-6">
                Pr√™t √† partager votre expertise ?
            </h2>
            <p class="text-lg sm:text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
                Rejoignez les speakers qui font la diff√©rence dans la tech lyonnaise
            </p>

            {
                cfp.cfp.isOpen ? (
                    <div class="space-y-4">
                        <a
                            href={SERVICES_DATA.cfp.publicUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-secondary text-lg px-8 py-4 hover-lift group inline-flex items-center"
                            aria-label="Soumettre une proposition au CFP"
                            data-cta
                            data-placement="cfp-bottom">
                            <span class="mr-2 group-hover:animate-bounce-gentle" aria-hidden="true">
                                üöÄ
                            </span>
                            Soumettre ma proposition
                        </a>
                        <p class="text-sm text-primary-100">
                            Jusqu'√† {cfp.cfp.maxSubmissions} propositions par personne
                        </p>
                    </div>
                ) : (
                    <div class="space-y-4">
                        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6">
                            <p class="text-white text-lg font-semibold mb-2">CFP ferm√©</p>
                            <p class="text-primary-100">
                                Les soumissions sont termin√©es. Notifications le {cfp.cfp.notificationDate}
                            </p>
                        </div>
                        <a
                            href={`mailto:${cfp.contact.email}`}
                            class="btn btn-ghost text-white border-white hover:bg-white/10 inline-flex items-center"
                            aria-label="Nous contacter (CFP ferm√©)"
                            data-cta
                            data-placement="cfp-bottom-closed">
                            <span class="mr-2" aria-hidden="true">
                                üìß
                            </span>
                            Nous contacter
                        </a>
                    </div>
                )
            }

            <CTASection
                title="Envie de venir ?"
                description="Pas encore pret(e) a proposer, mais partant(e) pour participer ? Prends ton billet."
                placement="content-cfp"
            />
        </div>
    </section>
</Layout>
