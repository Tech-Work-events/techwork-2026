---
import Layout from '../layouts/Layout.astro'
import { CFP_DATA, SERVICES_DATA, EVENT_DATA } from '../config'
import CTASection from '../components/cta/CTASection.astro'
import { Picture } from 'astro:assets'
import cfpHero from '../assets/cfp/cfp.webp'
// import cfpVideo from '../assets/cfp/cfp.mp4' // Code vid√©o comment√© pour test ult√©rieur

const cfp = CFP_DATA
---

<Layout title="CFP - Call for Papers" description={`Proposez votre talk pour ${EVENT_DATA.event.name}`}>
    <!-- Page Header with Hero Background -->
    <section class="relative min-h-[80vh] min-h-[400px] flex items-center justify-center overflow-hidden py-24">
        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
            <Picture
                src={cfpHero}
                alt="Call for Papers Tech'Work"
                class="w-full h-full object-cover object-center opacity-75"
                loading="eager"
                widths={[640, 768, 1024, 1280, 1920]}
                sizes="100vw"
            />
            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-black/60 via-black/50 to-black/40"></div>
        </div>

        <!-- Background Video (comment√© pour test ult√©rieur) -->
        <!--
        <div class="absolute inset-0 z-0">
            <video
                src={cfpVideo}
                autoplay
                loop
                muted
                playsinline
                class="w-full h-full object-cover opacity-75"
                style="object-position: center 40%;"
                aria-label="Call for Papers Tech'Work"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-black/60 via-black/50 to-black/40"></div>
        </div>
        -->

        <!-- Content -->
        <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <div class="scroll-animate">
                <div
                    class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-full text-sm font-semibold mb-8">
                    <span class="mr-2 animate-bounce-gentle">üì¢</span>
                    Call for Papers
                </div>
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-8">
                    Partagez votre <span class="text-gradient">Savoir</span> (et votre passion)
                </h1>
                <p class="text-lg sm:text-xl text-gray-200 max-w-3xl mx-auto">
                    Vous avez une exp√©rience, un fail √©pique ou une d√©couverte √† partager ? Rejoignez la sc√®ne ! On
                    fournit les lamas gonflables, vous apportez la magie. ü¶ô
                </p>

                <!-- Status Badge -->
                <div
                    class="mt-8 inline-flex items-center bg-white/10 backdrop-blur-md rounded-xl p-2 pr-6 border border-white/20">
                    <div
                        class={`p-2 rounded-lg mr-4 ${cfp.cfp.isOpen ? 'bg-green-500/20 text-green-300' : 'bg-red-500/20 text-red-300'}`}>
                        {cfp.cfp.isOpen ? '‚úÖ' : '‚ùå'}
                    </div>
                    <div class="text-left">
                        <div class="text-white font-bold text-sm">Statut du CFP</div>
                        <div class="text-gray-300 text-xs">
                            {cfp.cfp.isOpen ? 'Ouvert aux propositions' : 'Ferm√©'} ‚Ä¢ Deadline: {cfp.cfp.deadline}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-20">
            <div class="animate-bounce">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    ></path>
                </svg>
            </div>
        </div>
    </section>

    <!-- Main Content Container -->
    <div class="relative z-20 -mt-10 bg-white rounded-t-3xl">
        <!-- Intro / CTA Quick Access -->
        <section class="pt-16 pb-12">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <div class="scroll-animate space-y-4">
                    {
                        cfp.cfp.isOpen ? (
                            <div class="flex flex-col items-center">
                                <a
                                    href={SERVICES_DATA.cfp.publicUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="btn btn-primary text-base sm:text-xl px-6 sm:px-10 py-4 sm:py-5 hover-lift group inline-flex items-center shadow-xl shadow-primary-500/20"
                                    aria-label="Soumettre une proposition au CFP"
                                    data-cta
                                    data-placement="cfp-header">
                                    <span class="mr-3 text-2xl group-hover:animate-bounce-gentle" aria-hidden="true">
                                        üöÄ
                                    </span>
                                    <span class="font-bold">Soumettre mon talk</span>
                                </a>
                                <p class="text-sm text-gray-500 mt-3 italic">
                                    Jusqu'√† 3 propositions par personne (ne soyez pas timides !)
                                </p>
                            </div>
                        ) : (
                            <div class="inline-block p-8 bg-gray-50 rounded-2xl border border-gray-100">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">
                                    Le CFP est ferm√© pour cette √©dition
                                </h3>
                                <p class="text-gray-600 mb-6">Mais on est toujours ravis de papoter !</p>
                                <a
                                    href={`mailto:${cfp.contact.email}`}
                                    class="btn btn-secondary hover-lift group inline-flex items-center"
                                    aria-label="Nous contacter (CFP ferm√©)"
                                    data-cta
                                    data-placement="cfp-header-closed">
                                    <span class="mr-2" aria-hidden="true">
                                        üìß
                                    </span>
                                    Nous contacter
                                </a>
                            </div>
                        )
                    }
                </div>
            </div>
        </section>

        <!-- Formats des talks -->
        <section class="py-16 sm:py-20 bg-white">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16 scroll-animate">
                    <div
                        class="inline-flex items-center px-4 py-2 bg-secondary-100 text-secondary-700 rounded-full text-sm font-semibold mb-6">
                        <span class="mr-2">‚è±Ô∏è</span>
                        Le Menu
                    </div>
                    <h2 class="text-3xl sm:text-4xl font-black text-gray-900 mb-6">
                        Formats <span class="text-gradient">√† la carte</span>
                    </h2>
                    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                        Du snack rapide au plat de r√©sistance, choisissez ce qui convient le mieux √† votre sujet.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 stagger-children">
                    {
                        cfp.formats.map((format, index) => (
                            <div
                                class="card hover-lift scroll-animate-scale group relative overflow-hidden p-8"
                                style={`animation-delay: ${index * 0.1}s`}>
                                {/* Decorative background blob */}
                                <div class="absolute -right-10 -top-10 w-32 h-32 bg-primary-50 rounded-full blur-2xl group-hover:bg-primary-100 transition-colors duration-500" />

                                <div class="relative z-10 text-center">
                                    <div class="text-5xl mb-6 transform group-hover:scale-110 transition-transform duration-300">
                                        {format.icon}
                                    </div>
                                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{format.name}</h3>
                                    <div class="inline-block px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-bold mb-4">
                                        {format.duration}
                                    </div>
                                    <p class="text-gray-600 mb-6 leading-relaxed">{format.description}</p>
                                    <div class="pt-4 border-t border-gray-100">
                                        <span class="text-sm font-medium text-gray-500">
                                            {format.slots} cr√©neaux dispos
                                        </span>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Th√©matiques -->
        <section class="py-16 sm:py-20 bg-gray-50">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16 scroll-animate">
                    <h2 class="text-3xl sm:text-4xl font-black text-gray-900 mb-6">
                        De quoi on <span class="text-gradient">parle</span> ?
                    </h2>
                    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                        On aime la tech sous toutes ses formes. Voici ce qui nous fait vibrer (et friser).
                    </p>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 stagger-children">
                    {
                        cfp.topics.map((topic, index) => (
                            <div
                                class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md hover:border-primary-200 transition-all duration-300 scroll-animate-scale group"
                                style={`animation-delay: ${index * 0.1}s`}>
                                <div class="flex flex-col items-center text-center h-full">
                                    <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center text-3xl mb-4 group-hover:bg-primary-50 group-hover:scale-110 transition-all duration-300">
                                        {topic.icon}
                                    </div>
                                    <h3 class="text-lg font-bold text-gray-900 mb-3">{topic.name}</h3>
                                    <p class="text-sm text-gray-600 flex-grow">{topic.description}</p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Processus (Timeline Style) -->
        <section class="py-16 sm:py-20 bg-white overflow-hidden">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16 scroll-animate">
                    <div
                        class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-6">
                        <span class="mr-2">üó∫Ô∏è</span>
                        La Roadmap
                    </div>
                    <h2 class="text-3xl sm:text-4xl font-black text-gray-900 mb-6">
                        {cfp.process.title}
                    </h2>
                </div>

                <div class="relative">
                    <!-- Connecting Line (Desktop) -->
                    <div class="hidden lg:block absolute top-1/2 left-0 w-full h-1 bg-gray-100 -translate-y-1/2 z-0">
                    </div>

                    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 relative z-10">
                        {
                            cfp.process.steps.map((step, index) => (
                                <div
                                    class="relative group scroll-animate-scale"
                                    style={`animation-delay: ${index * 0.2}s`}>
                                    <div class="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 h-full flex flex-col items-center text-center">
                                        <div class="w-12 h-12 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold text-xl mb-4 shadow-md group-hover:scale-110 transition-transform duration-300 ring-4 ring-white">
                                            {step.step}
                                        </div>
                                        <div class="text-4xl mb-4">{step.icon}</div>
                                        <h3 class="text-lg font-bold text-gray-900 mb-2">{step.title}</h3>
                                        <p class="text-sm text-gray-600">{step.description}</p>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- Conseils & Benefits Grid -->
        <section class="py-16 sm:py-20 bg-gradient-to-br from-gray-50 to-primary-50/30">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-2 gap-8 lg:gap-20">
                    <!-- Conseils -->
                    <div class="scroll-animate-left">
                        <h3 class="text-2xl font-black text-gray-900 mb-8 flex items-center">
                            <span class="text-3xl mr-3">üí°</span>
                            {cfp.tips.title}
                        </h3>
                        <div class="grid gap-6">
                            {
                                cfp.tips.items.map((tip, index) => (
                                    <div class="card hover-lift group" style={`animation-delay: ${index * 0.1}s`}>
                                        <div class="p-6 relative overflow-hidden">
                                            {/* Shine effect */}
                                            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none" />

                                            <div class="relative z-10">
                                                <div class="flex items-center space-x-4 mb-3">
                                                    <div class="text-3xl group-hover:animate-bounce-gentle">
                                                        {tip.icon}
                                                    </div>
                                                    <h4 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300">
                                                        {tip.title}
                                                    </h4>
                                                </div>
                                                <p class="text-gray-600 text-sm leading-relaxed pl-[3.25rem]">
                                                    {tip.description}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Avantages -->
                    <div class="scroll-animate-right">
                        <h3 class="text-2xl font-black text-gray-900 mb-8 flex items-center">
                            <span class="text-3xl mr-3">üéÅ</span>
                            {cfp.benefits.title}
                        </h3>
                        <div class="grid gap-6">
                            {
                                cfp.benefits.items.map((benefit, index) => (
                                    <div class="card hover-lift group" style={`animation-delay: ${index * 0.1}s`}>
                                        <div class="p-6 relative overflow-hidden">
                                            {/* Shine effect */}
                                            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none" />

                                            <div class="relative z-10">
                                                <div class="flex items-center space-x-4 mb-3">
                                                    <div class="text-3xl group-hover:animate-bounce-gentle">
                                                        {benefit.icon}
                                                    </div>
                                                    <h4 class="text-lg font-bold text-gray-900 group-hover:text-primary-600 transition-colors duration-300">
                                                        {benefit.title}
                                                    </h4>
                                                </div>
                                                <p class="text-gray-600 text-sm leading-relaxed pl-[3.25rem]">
                                                    {benefit.description}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Final CTA -->
        <section class="py-12 sm:py-20 bg-white">
            <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center scroll-animate-scale">
                <div
                    class="relative overflow-hidden bg-gradient-to-br from-primary-600 to-secondary-600 rounded-3xl p-6 sm:p-10 lg:p-16 shadow-2xl">
                    <!-- Decorative circles -->
                    <div
                        class="absolute top-0 left-0 w-64 h-64 bg-white/10 rounded-full -translate-x-1/2 -translate-y-1/2 blur-3xl">
                    </div>
                    <div
                        class="absolute bottom-0 right-0 w-64 h-64 bg-black/10 rounded-full translate-x-1/2 translate-y-1/2 blur-3xl">
                    </div>

                    <div class="relative z-10">
                        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white mb-6">
                            Pr√™t √† monter sur sc√®ne ?
                        </h2>
                        <p class="text-lg sm:text-xl text-primary-100 mb-10 max-w-2xl mx-auto">
                            Rejoignez la famille Tech'Work. Promis, on ne crache pas (contrairement aux vrais lamas).
                        </p>

                        {
                            cfp.cfp.isOpen ? (
                                <div class="flex flex-col items-center">
                                    <a
                                        href={SERVICES_DATA.cfp.publicUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="btn bg-white text-primary-600 hover:bg-gray-50 text-base sm:text-xl px-6 sm:px-10 py-3 sm:py-4 rounded-full font-bold shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex items-center"
                                        aria-label="Soumettre une proposition au CFP">
                                        <span class="mr-3 text-2xl">üé§</span>
                                        Proposer un talk
                                    </a>
                                </div>
                            ) : (
                                <div class="flex flex-col items-center">
                                    <div class="bg-white/20 backdrop-blur-md rounded-lg p-6 mb-6">
                                        <p class="text-white font-bold">Le CFP est actuellement ferm√©.</p>
                                        <p class="text-primary-100 text-sm mt-1">
                                            Rendez-vous √† la prochaine √©dition !
                                        </p>
                                    </div>
                                    <a
                                        href={`mailto:${cfp.contact.email}`}
                                        class="btn border-2 border-white text-white hover:bg-white/10 px-8 py-3 rounded-full font-bold transition-colors">
                                        Nous contacter
                                    </a>
                                </div>
                            )
                        }
                    </div>
                </div>
            </div>
        </section>

        <CTASection
            title="Juste envie de regarder ?"
            description="Pas de pression, venir en spectateur c'est d√©j√† soutenir la commu !"
            placement="content-cfp-bottom"
        />
    </div>
</Layout>
