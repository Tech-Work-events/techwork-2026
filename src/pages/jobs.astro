---
import Layout from '../layouts/Layout.astro'
import JobCard from '../components/jobs/JobCard.astro'
import CTASection from '../components/cta/CTASection.astro'
import { EVENT_DATA } from '../config'
import jobsData from '../config/jobs.json'

const { meta, categories, remoteOptions, contractTypes, jobs } = jobsData

// Build lookup maps for labels
const categoryMap = Object.fromEntries(categories.map((c) => [c.id, c]))
const remoteMap = Object.fromEntries(remoteOptions.map((r) => [r.id, r.label]))
const contractMap = Object.fromEntries(contractTypes.map((c) => [c.id, c.label]))

// Sort jobs by publishedAt desc
const sortedJobs = [...jobs].sort((a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime())

// Stats
const uniqueCompanies = new Set(jobs.map((j) => j.company.name)).size
