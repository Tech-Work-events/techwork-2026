<script>
    function initJobFilters() {
        const searchInput = document.getElementById('job-search') as HTMLInputElement | null
        const categorySelect = document.getElementById('filter-category') as HTMLSelectElement | null
        const remoteSelect = document.getElementById('filter-remote') as HTMLSelectElement | null
        const contractSelect = document.getElementById('filter-contract') as HTMLSelectElement | null
        const resetButton = document.getElementById('filter-reset') as HTMLButtonElement | null
        const emptyStateReset = document.getElementById('empty-state-reset') as HTMLButtonElement | null
        const jobGrid = document.getElementById('job-grid')
        const jobCountNumber = document.getElementById('job-count-number')
        const jobCount = document.getElementById('job-count')
        const emptyState = document.getElementById('job-empty-state')

        if (!searchInput || !categorySelect || !remoteSelect || !contractSelect || !jobGrid) return

        const jobCards = Array.from(jobGrid.querySelectorAll<HTMLElement>('article[data-job-id]'))

        function applyFilters() {
            const search = searchInput!.value.toLowerCase().trim()
            const category = categorySelect!.value
            const remote = remoteSelect!.value
            const contract = contractSelect!.value

            let visibleCount = 0

            jobCards.forEach((card) => {
                const cardCategory = card.dataset.category || ''
                const cardRemote = card.dataset.remote || ''
                const cardContract = card.dataset.contract || ''
                const cardTitle = card.dataset.title || ''
                const cardCompany = card.dataset.company || ''

                const matchesCategory = !category || cardCategory === category
                const matchesRemote = !remote || cardRemote === remote
                const matchesContract = !contract || cardContract === contract
                const matchesSearch = !search || cardTitle.includes(search) || cardCompany.includes(search)

                const isVisible = matchesCategory && matchesRemote && matchesContract && matchesSearch

                card.style.display = isVisible ? '' : 'none'
                if (isVisible) visibleCount++
            })

            // Update count
            if (jobCountNumber && jobCount) {
                jobCountNumber.textContent = String(visibleCount)
                const suffix = visibleCount > 1 ? 's' : ''
                jobCount.innerHTML = `<span class="font-semibold text-gray-900" id="job-count-number">${visibleCount}</span> offre${suffix} disponible${suffix}`
            }

            // Toggle empty state
            if (emptyState) {
                emptyState.classList.toggle('hidden', visibleCount > 0)
            }
            if (jobGrid) {
                jobGrid.classList.toggle('hidden', visibleCount === 0)
            }

            // Toggle reset button
            const hasFilters = search || category || remote || contract
            if (resetButton) {
                resetButton.classList.toggle('hidden', !hasFilters)
            }
        }

        function resetFilters() {
            searchInput!.value = ''
            categorySelect!.value = ''
            remoteSelect!.value = ''
            contractSelect!.value = ''
            applyFilters()
        }

        // Debounce for search input
        let searchTimeout: ReturnType<typeof setTimeout>
        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout)
            searchTimeout = setTimeout(applyFilters, 200)
        })

        categorySelect.addEventListener('change', applyFilters)
        remoteSelect.addEventListener('change', applyFilters)
        contractSelect.addEventListener('change', applyFilters)

        if (resetButton) {
            resetButton.addEventListener('click', resetFilters)
        }
        if (emptyStateReset) {
            emptyStateReset.addEventListener('click', resetFilters)
        }
    }

    // Initialize on page load and after Astro view transitions
    document.addEventListener('astro:page-load', initJobFilters)
</script>
