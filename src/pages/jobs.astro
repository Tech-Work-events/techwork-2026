                    <span class="font-semibold text-gray-900" id="job-count-number">{sortedJobs.length}</span> offre{
                        sortedJobs.length > 1 ? 's' : ''
                    } disponible{sortedJobs.length > 1 ? 's' : ''}
                </p>
            </div>

            <!-- Job cards grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children" id="job-grid">
                {
                    sortedJobs.map((job, index) => (
                        <JobCard
                            {...job}
