---
import Layout from '../layouts/Layout.astro'
import { EVENT_DATA } from '../config'
import CTASection from '../components/cta/CTASection.astro'
import { Picture } from 'astro:assets'
import locationHero from '../assets/location/location.webp'

import { TICKETING_BASE_URL } from '../config/cta'

const isTicketingOpen = EVENT_DATA.event.ticketingOpen
const TARGET_URL = isTicketingOpen ? TICKETING_BASE_URL : '/billetterie-fermee'
---

<Layout
    title={`Lieu - ${EVENT_DATA.event.name}`}
    description={`UCLy Campus Saint-Paul, 10 Place des Archives, Lyon 2e â€” le lieu de ${EVENT_DATA.event.name}. AccÃ¨s simple, confort optimal, ambiance dÃ©calÃ©e et networking exceptionnel ðŸ¦™`}
    breadcrumbs={[{ name: 'Lieu', url: '/location' }]}>
    <!-- Hero Section -->
    <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden py-24">
        <!-- Floating decorative elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none" style="z-index:1;" aria-hidden="true">
            <div
                class="absolute top-20 left-4 sm:left-10 w-3 h-3 sm:w-4 sm:h-4 bg-white/10 rounded-full animate-float"
                style="animation-delay: 0s;">
            </div>
            <div
                class="absolute top-32 sm:top-40 right-4 sm:right-20 w-4 h-4 sm:w-6 sm:h-6 bg-primary-300/20 rounded-full animate-float"
                style="animation-delay: 1s;">
            </div>
            <div
                class="absolute bottom-32 sm:bottom-40 left-4 sm:left-20 w-2 h-2 sm:w-3 sm:h-3 bg-secondary-300/20 rounded-full animate-float"
                style="animation-delay: 2s;">
            </div>
            <div
                class="hidden sm:block absolute top-60 left-1/3 w-5 h-5 bg-white/5 rounded-full animate-float"
                style="animation-delay: 0.5s;">
            </div>
            <div
                class="hidden sm:block absolute bottom-20 right-1/4 w-4 h-4 bg-primary-200/15 rounded-full animate-float"
                style="animation-delay: 1.5s;">
            </div>
        </div>

        <!-- Radial dot pattern overlay -->
        <div class="absolute inset-0 opacity-20 pointer-events-none" style="z-index:1;" aria-hidden="true">
            <div
                class="absolute inset-0 animate-gradient bg-gradient-to-r from-primary-600/10 via-secondary-600/10 to-primary-600/10"
                style="background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;">
            </div>
        </div>

        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
            <Picture
                src={locationHero}
                alt="UCLy Campus Saint-Paul"
                class="w-full h-full object-cover opacity-75"
                style="object-position: center 40%;"
                loading="eager"
                fetchpriority="high"
                widths={[640, 768, 1024, 1280, 1920]}
                sizes="100vw"
            />
            <!-- Multi-layer overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-br from-primary-900/80 via-primary-800/70 to-secondary-900/80 animate-gradient">
            </div>
            <!-- Radial vignette for central readability -->
            <div
                class="absolute inset-0"
                style="background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.3) 70%, rgba(0,0,0,0.5) 100%);">
            </div>
        </div>

        <div class="relative z-10 max-w-6xl mx-auto px-4 text-center">
            <div class="scroll-animate">
                <div
                    class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm border border-white/20 text-white rounded-full text-sm font-semibold mb-8">
                    <span class="mr-2 animate-bounce-gentle">&#128205;</span>
                    Lieu &middot; {EVENT_DATA.event.shortName}
                    {EVENT_DATA.event.year}
                </div>
                <h1 class="text-4xl sm:text-5xl font-black text-white mb-6 location-hero-title">
                    UCLy &mdash; Campus Saint-Paul
                </h1>
                <p class="text-xl text-gray-200 max-w-2xl mx-auto font-medium">
                    Une ancienne prison r&eacute;habilit&eacute;e en campus ultra-moderne au c&oelig;ur de Lyon.
                </p>
            </div>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10" aria-hidden="true">
            <svg class="w-6 h-6 text-white/60 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"
                ></path>
            </svg>
        </div>
    </section>

    <!-- 1. L'ESSENTIEL (Adresse & Acces) -->
    <section class="relative z-20 -mt-10 bg-white rounded-t-3xl shadow-2xl pt-16 pb-12 sm:pb-20">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div class="scroll-animate-left">
                    <h2 class="text-3xl font-black text-gray-900 mb-8 italic">L'essentiel pour venir &#129433;</h2>

                    <div class="space-y-8 stagger-children">
                        <div class="flex gap-5">
                            <div
                                class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-2xl flex items-center justify-center text-2xl">
                                &#128205;
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">Adresse</h3>
                                <p class="text-gray-600">10 Place des Archives, 69002 Lyon</p>
                                <p class="text-sm text-gray-400 mt-1">Quartier Confluence / Perrache</p>
                            </div>
                        </div>

                        <div class="flex gap-5">
                            <div
                                class="flex-shrink-0 w-12 h-12 bg-secondary-100 rounded-2xl flex items-center justify-center text-2xl">
                                &#128647;
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">Acc&egrave;s TCL</h3>
                                <p class="text-gray-600">
                                    <strong>M&eacute;tro A</strong>, <strong>Tram T1 &amp; T2</strong>
                                </p>
                                <p class="text-gray-600">Arr&ecirc;t <strong>Perrache</strong> (5 min &agrave; pied)</p>
                            </div>
                        </div>

                        <div class="flex gap-5">
                            <div
                                class="flex-shrink-0 w-12 h-12 bg-amber-100 rounded-2xl flex items-center justify-center text-2xl">
                                &#128663;
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">Venir en voiture</h3>
                                <p class="text-gray-600">Parking <strong>Q-Park Lyon Perrache Archives</strong></p>
                                <p class="text-sm text-gray-400 mt-1">Situ&eacute; juste en face de l'entr&eacute;e</p>
                            </div>
                        </div>

                        <div class="flex gap-5">
                            <div
                                class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-2xl flex items-center justify-center text-2xl">
                                &#128690;
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">V&eacute;lo'v</h3>
                                <p class="text-gray-600">Station <strong>Place des Archives</strong></p>
                                <p class="text-sm text-gray-400 mt-1">Juste devant l'entr&eacute;e du campus</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-12 flex flex-wrap gap-4">
                        <a
                            href={TARGET_URL}
                            class="btn btn-primary px-8 py-3 hover-lift inline-flex items-center gap-2">
                            <span>&#127915;</span>
                            <span>R&eacute;server ma place</span>
                        </a>
                    </div>
                </div>

                <!-- 2. LE PLAN -->
                <div class="scroll-animate-right">
                    <div
                        class="bg-gradient-to-br from-primary-100 to-secondary-100 p-1.5 rounded-3xl hover-lift shadow-2xl group/map">
                        <div class="rounded-[1.25rem] overflow-hidden bg-white h-[400px] relative">
                            <iframe
                                title="UCLy Campus Saint-Paul â€” 10 Place des Archives, 69002 Lyon"
                                class="w-full h-full transition-all duration-700"
                                src="https://www.openstreetmap.org/export/embed.html?bbox=4.8213%2C45.7443%2C4.8313%2C45.7503&layer=mapnik&marker=45.7473%2C4.8263"
                                style="border:0;"
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                            <!-- Overlay colorÃ© qui disparaÃ®t au hover -->
                            <div
                                class="absolute inset-0 bg-primary-600/20 group-hover/map:opacity-0 transition-opacity duration-700 pointer-events-none"
                                aria-hidden="true">
                            </div>
                        </div>
                    </div>
                    <p class="text-center mt-4">
                        <a
                            href="https://www.openstreetmap.org/?mlat=45.7473&mlon=4.8263#map=17/45.7473/4.8263"
                            target="_blank"
                            class="inline-flex items-center gap-1.5 text-sm text-primary-600 hover:text-primary-700 transition-colors font-medium">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                ></path></svg
                            >
                            Ouvrir dans OpenStreetMap
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- 3. SERVICES & LOGISTIQUE -->
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16 scroll-animate">
                <h2 class="text-3xl font-black text-gray-900 mb-4">Services &amp; Logistique &#128295;</h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Tout est pr&ecirc;t pour vous accueillir dans les meilleures conditions.
                </p>
                <div class="mt-6 mx-auto w-24 h-1 bg-gradient-to-r from-primary-400 to-secondary-400 rounded-full">
                </div>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-children">
                <div
                    class="bg-white rounded-3xl border border-gray-100 shadow-sm hover-lift scroll-animate-scale overflow-hidden group relative">
                    <div class="h-1.5 bg-gradient-to-r from-amber-400 to-orange-500" aria-hidden="true"></div>
                    <div class="p-8 relative overflow-hidden">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none"
                            aria-hidden="true">
                        </div>
                        <div class="w-14 h-14 bg-amber-100 rounded-2xl flex items-center justify-center text-3xl mb-6">
                            &#127869;&#65039;
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-gray-900">Restauration</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Petit-d&eacute;jeuner, d&eacute;jeuner complet (traiteur local) et pauses caf&eacute;
                            inclus. Options v&eacute;g&eacute;/vegan garanties.
                        </p>
                    </div>
                </div>

                <div
                    class="bg-white rounded-3xl border border-gray-100 shadow-sm hover-lift scroll-animate-scale overflow-hidden group relative">
                    <div class="h-1.5 bg-gradient-to-r from-blue-400 to-indigo-600" aria-hidden="true"></div>
                    <div class="p-8 relative overflow-hidden">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none"
                            aria-hidden="true">
                        </div>
                        <div class="w-14 h-14 bg-blue-100 rounded-2xl flex items-center justify-center text-3xl mb-6">
                            &#9889;
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-gray-900">Technique</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Wifi disponible, prises &eacute;lectriques accessibles partout et salles climatis&eacute;es.
                        </p>
                    </div>
                </div>

                <div
                    class="bg-white rounded-3xl border border-gray-100 shadow-sm hover-lift scroll-animate-scale overflow-hidden group relative">
                    <div class="h-1.5 bg-gradient-to-r from-green-400 to-emerald-600" aria-hidden="true"></div>
                    <div class="p-8 relative overflow-hidden">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none"
                            aria-hidden="true">
                        </div>
                        <div class="w-14 h-14 bg-green-100 rounded-2xl flex items-center justify-center text-3xl mb-6">
                            &#9855;
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-gray-900">Accessibilit&eacute;</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Campus 100% accessible aux PMR (ascenseurs, rampes, sanitaires adapt&eacute;s).
                            Signal&eacute;tique claire.
                        </p>
                    </div>
                </div>

                <div
                    class="bg-white rounded-3xl border border-gray-100 shadow-sm hover-lift scroll-animate-scale overflow-hidden group relative">
                    <div class="h-1.5 bg-gradient-to-r from-purple-400 to-pink-500" aria-hidden="true"></div>
                    <div class="p-8 relative overflow-hidden">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000 pointer-events-none"
                            aria-hidden="true">
                        </div>
                        <div class="w-14 h-14 bg-purple-100 rounded-2xl flex items-center justify-center text-3xl mb-6">
                            &#129509;
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-gray-900">Confort</h3>
                        <p class="text-gray-600 leading-relaxed">
                            Vestiaire s&eacute;curis&eacute; et espaces de networking g&eacute;n&eacute;reux pour
                            &eacute;changer entre les talks.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 4. LE CADRE -->
    <section class="py-24 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden relative">
        <!-- Floating decorative elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
            <div
                class="absolute top-10 right-10 w-3 h-3 bg-primary-200/30 rounded-full animate-float"
                style="animation-delay: 0s;">
            </div>
            <div
                class="absolute bottom-20 left-10 w-4 h-4 bg-secondary-200/30 rounded-full animate-float"
                style="animation-delay: 1.5s;">
            </div>
            <div
                class="hidden sm:block absolute top-1/2 right-1/4 w-2 h-2 bg-primary-300/20 rounded-full animate-float"
                style="animation-delay: 0.8s;">
            </div>
        </div>

        <div class="max-w-4xl mx-auto px-4 text-center scroll-animate relative z-10">
            <div
                class="mb-10 inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-3xl shadow-lg">
                <span class="text-5xl">&#127963;&#65039;</span>
            </div>
            <h2 class="text-4xl font-black text-gray-900 mb-4">Un cadre unique &agrave; Lyon</h2>
            <div class="mx-auto w-24 h-1 bg-gradient-to-r from-primary-400 to-secondary-400 rounded-full mb-8"></div>
            <p class="text-xl text-gray-600 mb-10 leading-relaxed">
                Le Campus Saint-Paul de l'UCLy est une ancienne prison du XIXe si&egrave;cle magnifiquement
                r&eacute;habilit&eacute;e. Entre h&eacute;ritage historique et design contemporain, les grandes
                verri&egrave;res et les pierres dor&eacute;es offrent un cadre inspirant, calme et id&eacute;alement
                situ&eacute; pour Tech'Work 2026.
            </p>
            <div
                class="inline-flex items-center gap-3 px-6 py-3 bg-white/60 backdrop-blur-sm border border-white/80 rounded-full shadow-sm text-primary-600 font-bold text-lg">
                <span class="animate-bounce-gentle">&#129433;</span>
                <span>Ola a valid&eacute; le confort des lieux</span>
            </div>
        </div>
    </section>

    <CTASection
        title="Rejoignez-nous Ã  l'UCLy"
        description="Vivez une expÃ©rience tech mÃ©morable dans un lieu d'exception. Ne tardez pas, le nombre de places est limitÃ©."
        placement="content-location"
    />
</Layout>

<style>
    .location-hero-title {
        text-shadow:
            0 0 30px rgba(255, 255, 255, 0.15),
            0 0 60px rgba(255, 255, 255, 0.08),
            0 4px 12px rgba(0, 0, 0, 0.4),
            0 8px 24px rgba(0, 0, 0, 0.3);
    }

    @media (prefers-reduced-motion: reduce) {
        .location-hero-title {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }
    }
</style>
