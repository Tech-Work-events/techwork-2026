---
import { TICKETING_BASE_URL } from '../../config/cta'
import { EVENT_DATA } from '../../config'

interface Props {
    title?: string
    description?: string
    placement?: string
}

const {
    title = 'R&eacute;server ma place',
    description = 'Rejoins-nous pour une journ&eacute;e de talks, ateliers et rencontres &mdash; lama&#8209;friendly.',
    placement = 'content',
} = Astro.props as Props

const isTicketingOpen = EVENT_DATA.event.ticketingOpen
const TARGET_URL = isTicketingOpen ? TICKETING_BASE_URL : '/billetterie-fermee'
---

<section class="py-12 sm:py-16 lg:py-20 bg-gradient-to-r from-primary-50 to-secondary-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-gray-900 mb-4">{title}</h2>
        <p class="text-gray-700 mb-6 max-w-2xl mx-auto">{description}</p>
        <a
            href={TARGET_URL}
            class="btn btn-primary text-base sm:text-lg px-8 py-4 hover-lift inline-flex items-center gap-2"
            data-cta
            data-placement={placement}
            data-base-href={TARGET_URL}
            aria-label="RÃ©server ma place">
            <span>&#127915;</span>
            <span>R&eacute;server ma place</span>
        </a>
    </div>
</section>
