---
// Community block combining WhatsApp and Newsletter
import { SOCIAL_DATA } from '../../config'
const whatsapp = SOCIAL_DATA.networks.find((n) => n.id === 'whatsapp')
---

<section class="py-12 sm:py-16 bg-gradient-to-br from-primary-50 via-white to-secondary-50" id="community">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <div
                class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-6">
                <span class="mr-2">ü§ù</span>
                Communaut√©
            </div>
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-black text-gray-900 mb-4">
                Rejoins le troupeau
                <span class="text-gradient">Tech'Work</span>
            </h2>
            <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto">
                Deux fa√ßons de rester connect√©¬∑e avec les passionn√©s de tech lyonnais. Pas de spam, que du love (et des
                lamas).
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-start">
            <!-- WhatsApp Column -->
            <div
                class="bg-white rounded-2xl p-6 sm:p-8 shadow-lg border border-gray-100 h-full flex flex-col items-center text-center">
                <div class="w-16 h-16 bg-[#25D366]/10 rounded-full flex items-center justify-center mb-6">
                    <span class="text-4xl">üí¨</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">La Communaut√© WhatsApp</h3>
                <p class="text-gray-600 mb-8 flex-grow">
                    √âchange en direct avec les autres participants, organise des covoiturages, partage tes meilleures
                    photos de lamas et ne rate aucune info de derni√®re minute.
                </p>
                <div class="w-full">
                    <a
                        href={whatsapp?.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn w-full py-3 text-base hover-lift group bg-[#25D366] hover:bg-[#20bd5a] text-white border-transparent">
                        <span class="mr-2 group-hover:animate-bounce-gentle">üì±</span>
                        Rejoindre la communaut√© WhatsApp
                    </a>
                    <p class="mt-4 text-xs text-gray-500">
                        Communaut√© publique et mod√©r√©e. L'ambiance y est aussi douce que la laine d'alpaga.
                    </p>
                </div>
            </div>

            <!-- Newsletter Column -->
            <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-lg border border-gray-100 h-full">
                <div class="flex flex-col items-center text-center mb-6">
                    <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6">
                        <span class="text-4xl">üì¨</span>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3">La Newsletter</h3>
                    <p class="text-gray-600">
                        Re√ßois les actus Tech'Work, un rappel avant la cl√¥ture des ventes et quelques surprises.
                    </p>
                </div>

                <form id="community-newsletter-form" class="space-y-4">
                    <div>
                        <label for="community-newsletter-email" class="sr-only">Adresse email</label>
                        <input
                            id="community-newsletter-email"
                            name="email"
                            type="email"
                            placeholder="ton@email.com"
                            required
                            class="w-full px-4 py-3 border border-gray-200 rounded-xl text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                        />
                    </div>
                    <button type="submit" class="btn btn-primary w-full py-3 text-base hover-lift group">
                        <span class="mr-2 group-hover:animate-bounce-gentle">ü¶ô</span>
                        S'inscrire √† la newsletter
                    </button>
                </form>
                <div id="community-newsletter-message" class="mt-4 text-sm hidden text-center"></div>
                <p class="mt-4 text-xs text-gray-500 text-center">
                    D√©sinscription en un clic. Tes donn√©es restent entre nous.
                </p>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('community-newsletter-form') as HTMLFormElement | null
        const messageDiv = document.getElementById('community-newsletter-message')

        if (!form || !messageDiv) return

        const showMessage = (text: string, isError: boolean) => {
            messageDiv.textContent = text
            messageDiv.className = `mt-4 text-sm text-center ${isError ? 'text-red-600' : 'text-green-600'}`
            messageDiv.classList.remove('hidden')
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault()
            const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement
            const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement
            const email = emailInput?.value?.trim()

            if (!email) {
                showMessage('Merci de renseigner ton email', true)
                return
            }

            submitBtn.disabled = true
            submitBtn.innerHTML = '<span class="mr-2">‚è≥</span> Inscription...'

            try {
                const response = await fetch(
                    'https://us-central1-techwork-2026.cloudfunctions.net/subscribeNewsletter',
                    {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email, source: 'homepage_community' }),
                    }
                )

                const result = await response.json()

                if (result.success) {
                    showMessage("‚úÖ Bienvenue dans l'aventure ! Check tes emails ü¶ô", false)
                    form.reset()
                } else {
                    showMessage(result.error || "Oups, une erreur s'est produite", true)
                }
            } catch (error) {
                console.error('Erreur:', error)
                showMessage('Erreur r√©seau. R√©essaie plus tard.', true)
            } finally {
                submitBtn.disabled = false
                submitBtn.innerHTML =
                    '<span class="mr-2 group-hover:animate-bounce-gentle">ü¶ô</span> S\'inscrire √† la newsletter'
            }
        })
    })
</script>
