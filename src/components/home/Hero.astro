---
import { Picture } from 'astro:assets'
import backgroundHome from '../../assets/home.webp'
---

<div class="relative min-h-screen flex items-center justify-center overflow-hidden hero-gradient pt-16">
    <!-- √âl√©ments flottants anim√©s -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none" style="z-index:1;">
        <div class="absolute top-20 left-10 w-4 h-4 bg-white/10 rounded-full animate-float" style="animation-delay: 0s;"></div>
        <div class="absolute top-40 right-20 w-6 h-6 bg-primary-300/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-40 left-20 w-3 h-3 bg-secondary-300/20 rounded-full animate-float" style="animation-delay: 2s;"></div>
        <div class="absolute top-60 left-1/3 w-5 h-5 bg-white/5 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
        <div class="absolute bottom-20 right-1/4 w-4 h-4 bg-primary-200/15 rounded-full animate-float" style="animation-delay: 1.5s;"></div>
    </div>
    
    <!-- Background Pattern anim√© -->
    <div class="absolute inset-0 opacity-20 pointer-events-none" style="z-index:1;">
        <div class="absolute inset-0 animate-gradient bg-gradient-to-r from-primary-600/10 via-secondary-600/10 to-primary-600/10" 
             style="background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>
    
    <!-- Background Image Overlay -->
    <Picture 
        src={backgroundHome} 
        formats={['avif', 'webp']} 
        alt="" 
        loading="lazy" 
        class="absolute inset-0 w-full h-full object-cover opacity-20 parallax pointer-events-none" 
        data-speed="0.2"
        style="z-index:1;"
    />
    
    <!-- Gradient Overlay anim√© -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-900/90 via-primary-800/80 to-secondary-900/90 animate-gradient pointer-events-none" style="z-index:2;"></div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="space-y-8">
            <!-- Logo/Title avec animation s√©quentielle -->
            <div class="space-y-4 px-4 scroll-animate">
                <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-black text-white mb-4 tracking-tight">
                    <span class="inline-block animate-slide-down" style="animation-delay: 0.2s;">Tech'Work</span>
                    <span class="block text-2xl sm:text-3xl md:text-5xl lg:text-6xl xl:text-7xl text-gradient font-bold animate-slide-up" style="animation-delay: 0.4s;">Lyon 2026</span>
                </h1>
                <p class="text-lg sm:text-xl md:text-2xl text-gray-200 font-medium max-w-2xl mx-auto text-balance animate-fade-in" style="animation-delay: 0.6s;">
                    L'afterwork IT sur votre temps de travail
                </p>
            </div>
            
            <!-- Event Details avec animation glass -->
            <div class="glass px-8 py-6 max-w-2xl mx-auto scroll-animate-scale hover-lift">
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">
                    Juin 2026 - Lyon
                </h2>
                <p class="text-gray-200 text-lg">
                    Lieu √† confirmer <span class="inline-block animate-bounce-gentle">üî•</span>
                </p>
            </div>
            
            <!-- CTA Buttons avec animations s√©quentielles -->
            <div class="flex flex-col gap-3 justify-center items-center max-w-4xl mx-auto pt-8 px-4 scroll-animate">
                <a href="#signup" class="btn btn-primary text-sm sm:text-base lg:text-lg px-6 sm:px-8 py-3 sm:py-4 w-full max-w-sm glow text-center hover-lift animate-scale-in group" style="animation-delay: 0.8s;">
                    <span class="mr-2 group-hover:animate-bounce-gentle">üöÄ</span>
                    <span class="hidden sm:inline">Je veux √™tre dev ET avoir une vie sociale</span>
                    <span class="sm:hidden">Dev ET vie sociale</span>
                </a>
                <div class="flex flex-col sm:flex-row gap-3 w-full max-w-lg stagger-children">
                    <a href="#cfp" class="btn btn-secondary text-sm sm:text-base px-6 sm:px-8 py-3 sm:py-4 flex-1 text-center hover-lift animate-slide-left group">
                        <span class="mr-2 group-hover:animate-bounce-gentle">üé§</span>
                        <span class="hidden sm:inline">Postuler au CFP</span>
                        <span class="sm:hidden">CFP</span>
                    </a>
                    <a href="#sponsors" class="btn btn-ghost text-white border-white hover:bg-white/10 text-sm sm:text-base px-6 sm:px-8 py-3 sm:py-4 flex-1 text-center hover-lift animate-slide-right group">
                        <span class="mr-2 group-hover:animate-bounce-gentle">ü§ù</span>
                        <span class="hidden sm:inline">Devenir partenaire</span>
                        <span class="sm:hidden">Partenaire</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Animated Scroll Indicator am√©lior√© -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-gentle scroll-animate">
        <div class="flex flex-col items-center text-white/60 hover:text-white/80 transition-colors duration-300 cursor-pointer group">
            <span class="text-sm mb-2 group-hover:text-white transition-colors">D√©couvrir</span>
            <svg class="w-6 h-6 group-hover:animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </div>
</div>