---
import type { OpenPlannerType } from '../../type'

interface Props {
    sponsorCategories: OpenPlannerType['sponsors']
}

const { sponsorCategories } = Astro.props

const sponsorsCategoriesSorted = sponsorCategories.sort((a, b) => a.order - b.order)
