<script>
    const container = document.getElementById('testimonials-container')
    const leftBtn = document.getElementById('scroll-left')
    const rightBtn = document.getElementById('scroll-right')

    if (container && leftBtn && rightBtn) {
        // Configuration
        const AUTO_SCROLL_INTERVAL = 4500 // 4.5 secondes entre chaque transition
        const SCROLL_AMOUNT = 400 // Pixels √† d√©filer
        let autoScrollTimer: ReturnType<typeof setInterval> | null = null
        let isPaused = false

        // Fonction pour d√©filer vers la droite avec boucle infinie
        const scrollNext = () => {
            if (isPaused) return

            const maxScroll = container.scrollWidth - container.clientWidth
            const currentScroll = container.scrollLeft

            // Si on est proche de la fin, revenir au d√©but en douceur
            if (currentScroll >= maxScroll - 10) {
                container.scrollTo({ left: 0, behavior: 'smooth' })
            } else {
                container.scrollBy({ left: SCROLL_AMOUNT, behavior: 'smooth' })
            }
        }

        // D√©marrer le d√©filement automatique
        const startAutoScroll = () => {
            if (autoScrollTimer) return
            autoScrollTimer = setInterval(scrollNext, AUTO_SCROLL_INTERVAL)
        }

        // Arr√™ter le d√©filement automatique
        const stopAutoScroll = () => {
            if (autoScrollTimer) {
                clearInterval(autoScrollTimer)
                autoScrollTimer = null
            }
        }

        // Gestion du survol - pause au hover
        container.addEventListener('mouseenter', () => {
            isPaused = true
        })

        container.addEventListener('mouseleave', () => {
            isPaused = false
        })

        // Pause √©galement quand les boutons sont survol√©s
        leftBtn.addEventListener('mouseenter', () => {
            isPaused = true
        })

        leftBtn.addEventListener('mouseleave', () => {
            isPaused = false
        })

        rightBtn.addEventListener('mouseenter', () => {
            isPaused = true
        })

        rightBtn.addEventListener('mouseleave', () => {
            isPaused = false
        })

        // Boutons de navigation manuelle
        leftBtn.addEventListener('click', () => {
            const currentScroll = container.scrollLeft
            // Si on est au d√©but, aller √† la fin
            if (currentScroll <= 10) {
                const maxScroll = container.scrollWidth - container.clientWidth
                container.scrollTo({ left: maxScroll, behavior: 'smooth' })
            } else {
                container.scrollBy({ left: -SCROLL_AMOUNT, behavior: 'smooth' })
            }
        })

        rightBtn.addEventListener('click', () => {
            const maxScroll = container.scrollWidth - container.clientWidth
            const currentScroll = container.scrollLeft
            // Si on est √† la fin, revenir au d√©but
            if (currentScroll >= maxScroll - 10) {
                container.scrollTo({ left: 0, behavior: 'smooth' })
            } else {
                container.scrollBy({ left: SCROLL_AMOUNT, behavior: 'smooth' })
            }
        })

        // Respecter les pr√©f√©rences d'accessibilit√© (reduced motion)
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)')

        if (!prefersReducedMotion.matches) {
            // D√©marrer le d√©filement automatique apr√®s un court d√©lai
            setTimeout(startAutoScroll, 1000)
        }

        // √âcouter les changements de pr√©f√©rence
        prefersReducedMotion.addEventListener('change', (e) => {
            if (e.matches) {
                stopAutoScroll()
            } else {
                startAutoScroll()
            }
        })

        // Observer la visibilit√© de la section pour optimiser les performances
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting && !prefersReducedMotion.matches) {
                        startAutoScroll()
                    } else {
                        stopAutoScroll()
                    }
                })
            },
            { threshold: 0.2 }
        )

        const section = container.closest('section')
        if (section) {
            observer.observe(section)
        }
    }
</script>
