---
// depending on the name of the icon, return the corresponding Astro component

import GitHub from './GitHub.astro'
import LinkedIn from './LinkedIn.astro'
import Twitter from './Twitter.astro'

interface Props {
    name: string
}

const { name } = Astro.props

const iconName = name.toLowerCase().replace(' ', '-').trim()
---

{
    (() => {
        switch (iconName) {
            case 'github':
                return <GitHub />
            case 'x':
            case 'twitter':
                return <Twitter />
            case 'linkedin':
                return <LinkedIn />
            default:
                return ' '
        }
    })()
}
