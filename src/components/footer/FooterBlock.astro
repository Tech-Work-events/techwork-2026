---
import FooterSocial from './FooterSocial.astro'
import FooterRel from './FooterRel.astro'
import FooterNav from './FooterNav.astro'
---

<footer role="contentinfo" class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Main Footer Content -->
        <div class="py-8 sm:py-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
                <!-- Brand / Description & Newsletter -->
                <div class="lg:col-span-1">
                    <FooterNav />
                </div>

                <!-- Navigation -->
                <div class="lg:col-span-1">
                    <FooterRel />
                </div>

                <!-- Suivez-nous -->
                <div class="lg:col-span-1">
                    <FooterSocial />
                </div>

                <!-- Contact -->
                <div class="lg:col-span-1">
                    <h3 class="text-lg font-semibold text-white mb-4">Contact</h3>
                    <a
                        href="mailto:contact@techwork.events"
                        aria-label="Contacter l’équipe par e‑mail"
                        class="text-gray-300 hover:text-primary-400 transition-colors duration-200 text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900">
                        contact@techwork.events
                    </a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-700 py-4 sm:py-6">
            <div class="flex flex-col space-y-6">
                <!-- Legal Links -->
                <div class="flex flex-wrap justify-center items-center gap-4 sm:gap-6">
                    <a
                        href="/legal/mentions-legales"
                        class="text-gray-400 hover:text-white text-xs sm:text-sm transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900">
                        Mentions légales
                    </a>
                    <span class="text-gray-600">•</span>
                    <a
                        href="/legal/politique-confidentialite"
                        class="text-gray-400 hover:text-white text-xs sm:text-sm transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900">
                        Politique de confidentialité
                    </a>
                    <span class="text-gray-600">•</span>
                    <a
                        href="/legal/cookies"
                        class="text-gray-400 hover:text-white text-xs sm:text-sm transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900">
                        Cookies
                    </a>
                    <span class="text-gray-600">•</span>
                    <a
                        href="/legal/droits-utilisateurs"
                        class="text-gray-400 hover:text-white text-xs sm:text-sm transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900">
                        Vos droits
                    </a>
                </div>

                <!-- Copyright -->
                <div class="flex flex-col md:flex-row justify-between items-center space-y-3 md:space-y-0">
                    <div class="text-gray-400 text-xs sm:text-sm text-center md:text-left">
                        © 2026 Tech'Work Lyon - Made with ❤️ by des devs lyonnais
                    </div>
                    <div class="text-gray-400 text-xs sm:text-sm font-mono text-center md:text-right">
                        git commit -m "Révolution en cours"
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
