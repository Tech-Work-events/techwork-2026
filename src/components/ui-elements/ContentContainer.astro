---
import Stack from './Stack.astro'

interface Props {
    spaceBlock?: string
}

const { spaceBlock = '1.125rem' } = Astro.props
---

<div class="container">
    <Stack space="1.5rem">
        <slot />
    </Stack>
</div>

<style define:vars={{ spaceBlock }}>
    .container {
        --space-block: min(var(--spaceBlock), 2rem);

        margin: 0 auto;
        padding: var(--space-block) 1rem;
        position: relative;
        max-width: var(--max-container-width);

        @media (min-width: 1280px) {
            --space-block: var(--spaceBlock);
        }
    }
</style>
